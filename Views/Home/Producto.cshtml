@model Gestion_Ventas_P.Models.Producto

@{
    ViewData["Title"] = "Agregar Producto";
}

<h2>Agregar Producto</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="AgregarProducto" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required />
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripción</label>
        <textarea class="form-control" id="Descripcion" name="Descripcion" required></textarea>
    </div>

    <div class="form-group">
        <label for="PrecioUnitario">Precio Unitario</label>
        <input type="number" step="0.01" class="form-control" id="PrecioUnitario" name="PrecioUnitario" required />
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoriaID, "Categoría", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CategoriaID", ViewBag.Categorias as SelectList, "Seleccione una categoría", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoriaID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TipoPanID, "Tipo de Pan", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TipoPanID", ViewBag.TiposDePan as SelectList, "Seleccione un tipo de pan", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TipoPanID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="AdicionadoPor">Adicionado por</label>
        <input type="text" class="form-control" id="AdicionadoPor" name="AdicionadoPor" required />
    </div>

    <button type="submit" class="btn btn-primary">Agregar Producto</button>
</form>

<a asp-action="VerProductos" class="btn btn-secondary mt-3">Lista de Productos</a>