@model Gestion_Ventas_P.Models.Compra

@{
    ViewData["Title"] = "Agregar Compra";
}

<h2>Agregar Nueva Compra</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="AgregarCompra" method="post">
    <div class="form-group">
        <label asp-for="ProveedorID">Cliente</label>
        <select asp-for="ProveedorID" asp-items="ViewBag.Proveedor" class="form-control">
            <option value="">Seleccione un Proveedor</option>
        </select>
    </div> 

    <div class="form-group">
        <label asp-for="FechaCompra" class="control-label">Fecha de Compra</label>
        <input asp-for="FechaCompra" class="form-control" type="datetime-local" required />
    </div>

    <div class="form-group">
        <label asp-for="Total" class="control-label">Total</label>
        <input asp-for="Total" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label asp-for="AdicionadoPor" class="control-label">Adicionado por</label>
        <input asp-for="AdicionadoPor" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Agregar Compra</button>
    <a asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</form>

<a asp-action="VerCompra" class="btn btn-secondary">Ver Lista de Compras</a>
