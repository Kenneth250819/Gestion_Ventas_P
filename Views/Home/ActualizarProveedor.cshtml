@model Gestion_Ventas_P.Models.Proveedor

@{
    ViewData["Title"] = "Actualizar Proveedor";
}

<h2>Actualizar Proveedor</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="ActualizarProveedor" method="post">
    <input type="hidden" asp-for="ProveedorID" />

    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre del Proveedor</label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Contacto" class="control-label">Contacto</label>
        <input asp-for="Contacto" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Telefono" class="control-label">Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Direccion" class="control-label">Dirección</label>
        <input asp-for="Direccion" class="form-control" />
    </div> 

    <div class="form-group">
        <label asp-for="AdicionadoPor" class="control-label">Adicionado por</label>
        <input asp-for="AdicionadoPor" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="VerProveedor" class="btn btn-secondary">Cancelar</a>
</form>
