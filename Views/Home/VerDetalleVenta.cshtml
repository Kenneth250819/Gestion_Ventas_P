@model List<Gestion_Ventas_P.Models.DetalleVenta>

@{
    ViewBag.Title = "Detalles de Venta";
}

<h2>Detalles de Venta</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-warning">No hay detalles de venta registrados.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Venta ID</th>  <!-- Ahora solo mostramos el ID de la Venta -->
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Adicionado Por</th>
                <th>Fecha de Adición</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var DetalleVenta in Model)
            {
                <tr>
                    <td>@DetalleVenta.DetalleVentaID</td>
                    <td>@DetalleVenta.ClienteVenta</td><!-- Mostramos el ID de la venta -->
                    <td>@DetalleVenta.NombreProducto</td>
                    <td>@DetalleVenta.Cantidad</td>
                    <td>@DetalleVenta.PrecioUnitario</td>
                    <td>@DetalleVenta.AdicionadoPor</td>
                    <td>@DetalleVenta.FechaAdicion</td>
                    <td>
                        <a href="@Url.Action("ActualizarDetalleVenta", "Home", new { id = DetalleVenta.DetalleVentaID })" class="btn btn-warning btn-sm">Actualizar</a>
                        <form asp-action="EliminarDetalleVenta" method="post" style="display:inline;">
                            <input type="hidden" name="DetalleVentaID" value="@DetalleVenta.DetalleVentaID" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar Detalle de la Venta?');">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
