@model Gestion_Ventas_P.Models.PagosProveedor

@{
    ViewData["Title"] = "Actualizar Pagos de Proveedor";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="ActualizarPagosProveedor" method="post">
    <input type="hidden" asp-for="PagoID" />

    <div class="form-group">
        <label asp-for="CompraID" class="control-label">CompraID</label>
        <input asp-for="CompraID" class="form-control" type="number" required />
    </div>

    <div class="form-group">
        <label asp-for="Monto" class="control-label">Monto</label>
        <input asp-for="Monto" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FechaPago" class="control-label">Fecha de Pago</label>
        <input asp-for="FechaPago" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MetodoPagoID" class="control-label">Método de Pago</label>
        <select asp-for="MetodoPagoID" asp-items="ViewBag.MetodosPago" class="form-control">
            <option value="">Seleccione un Método de Pago</option>
        </select>
        <span asp-validation-for="MetodoPagoID" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Actualizar Pago</button>

</form>
<a asp-action="VerPagoCliente" class="btn btn-secondary">Volver Atars</a>
