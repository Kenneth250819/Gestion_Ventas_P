@model Gestion_Ventas_P.Models.Cliente

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="actualizar-cliente-container">
    <h2>Actualizar Cliente</h2>
    <form asp-action="ActualizarCliente" method="post">
        <input type="hidden" asp-for="ClienteID" />

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Apellido"></label>
            <input asp-for="Apellido" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Apellido2"></label>
            <input asp-for="Apellido2" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Direccion"></label>
            <input asp-for="Direccion" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Provincia"></label>
            <input asp-for="Provincia" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Canton"></label>
            <input asp-for="Canton" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" type="email" />
        </div>

        <div class="form-group">
            <label asp-for="FechaNacimiento"></label>
            <input asp-for="FechaNacimiento" class="form-control" type="date" />
        </div>

        <div class="form-group">
            <label asp-for="Nacionalidad"></label>
            <input asp-for="Nacionalidad" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>

    <a asp-action="CrearCliente">Volver a la lista</a>
</div>


<a asp-action="CrearCliente">Volver a la lista</a>

@section Styles {
    <link rel="stylesheet" href="~/css/actualizarCliente.css" />
}