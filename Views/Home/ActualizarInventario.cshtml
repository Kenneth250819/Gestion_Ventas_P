@model Inventario

@{
    ViewData["Title"] = "Actualizar Inventario";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="ActualizarInventario" method="post">
    <input type="hidden" asp-for="InventarioID" />
    <input type="hidden" asp-for="FechaAdicion" />

    <div class="form-group">
        <label asp-for="ProductoID" class="control-label">Producto</label>
        <select asp-for="ProductoID" asp-items="ViewBag.Productos" class="form-control" required></select>
    </div>

    <div class="form-group">
        <label asp-for="Cantidad" class="control-label">Cantidad</label>
        <input asp-for="Cantidad" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="FechaActualizacion" class="control-label">Fecha de Actualización</label>
        <input asp-for="FechaActualizacion" type="datetime-local" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ModificadoPor" class="control-label">Modificado Por</label>
        <input asp-for="ModificadoPor" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-action="VerInventario" class="btn btn-secondary">Cancelar</a>
</form>
