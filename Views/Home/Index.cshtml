@{
    ViewData["Title"] = "Menú Principal";
}

<h2 class="text-center mb-4">Menú Principal</h2>

<div class="container">
    <div class="row g-3">
        @{
            var menuItems = new[] {
        new { Title = "Clientes", Icon = "fa-user", Color = "text-primary", Action = "CrearCliente" },
        new { Title = "Tipos de Pan", Icon = "fa-bread-slice", Color = "text-warning", Action = "TipoDePan" },
        new { Title = "Categorías", Icon = "fa-list-alt", Color = "text-primary", Action = "Categoria" },
        new { Title = "Productos", Icon = "fa-box", Color = "text-warning", Action = "Producto" },
        new { Title = "Ventas", Icon = "fa-shopping-cart", Color = "text-primary", Action = "Venta" },
        new { Title = "Métodos de Pago", Icon = "fa-credit-card", Color = "text-warning", Action = "MetodoPago" },
        new { Title = "Pago de Clientes", Icon = "fa-money-bill-wave", Color = "text-primary", Action = "PagoCliente" },
        new { Title = "Detalle de Venta", Icon = "fa-receipt", Color = "text-warning", Action = "DetalleVenta" },
        new { Title = "Inventarios", Icon = "fa-warehouse", Color = "text-primary", Action = "Inventario" },
        new { Title = "Proveedores", Icon = "fa-truck", Color = "text-warning", Action = "Proveedor" },
        new { Title = "Compras", Icon = "fa-shopping-bag", Color = "text-primary", Action = "Compra" },
        new { Title = "Detalle de Compras", Icon = "fa-file-invoice", Color = "text-warning", Action = "DetalleCompra" },
        new { Title = "Pago Proveedores", Icon = "fa-hand-holding-usd", Color = "text-primary", Action = "PagosProveedor" }
        };
        }

        @foreach (var item in menuItems)
        {
            <div class="col-md-4">
                <div class="card shadow-sm text-center menu-card">
                    <div class="card-body">
                        <i class="fas @item.Icon fa-2x @item.Color"></i>
                        <h5 class="card-title mt-2">@item.Title</h5>
                        <a href="@Url.Action(item.Action, "Home")" class="btn @(@item.Color == "text-primary" ? "btn-primary" : "btn-warning") w-100">Ir</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .menu-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 12px;
    }

        .menu-card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .menu-card .btn {
            font-weight: bold;
            border-radius: 8px;
        }
</style>
