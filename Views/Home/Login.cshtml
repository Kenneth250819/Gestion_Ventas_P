@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px;
        }

            .form-control:focus {
                border-color: #764ba2;
                box-shadow: 0 0 10px rgba(118, 75, 162, 0.5);
            }

        .login-btn {
            background: #764ba2;
            color: white;
            border-radius: 10px;
            padding: 10px;
            width: 100%;
            transition: 0.3s;
        }

            .login-btn:hover {
                background: #5a3d85;
            }

        .icon {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #764ba2;
        }

        .input-group {
            position: relative;
        }

        .alert {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="text-center">
            <img src="https://via.placeholder.com/100" alt="Logo" class="mb-3 rounded-circle">
            <h3 class="mb-4">Iniciar Sesión</h3>
        </div>

        <form action="@Url.Action("Login", "Home")" method="post">
            <!-- Nombre de Usuario -->
            <div class="mb-3 input-group">
                <span class="icon"><i class="fas fa-user"></i></span>
                <input type="text" name="NombreUsuario" class="form-control ps-4" placeholder="Nombre de Usuario" required>
            </div>

            <!-- Contraseña -->
            <div class="mb-3 input-group">
                <span class="icon"><i class="fas fa-lock"></i></span>
                <input type="password" name="Contrasenia" class="form-control ps-4" placeholder="Contraseña" required>
            </div>

            <!-- Mensaje de error -->
            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewData["Mensaje"]
                </div>
            }

            <button type="submit" class="btn login-btn">Iniciar Sesión</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
