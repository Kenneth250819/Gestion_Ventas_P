@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .login-container {
            background-color: #1c1c1e;
            padding: 2.5rem 2rem;
            border-radius: 20px;
            max-width: 400px;
            width: 100%;
            text-align: center;
            color: white;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        }

            .login-container img {
                width: 80px;
                margin-bottom: 1rem;
            }

            .login-container h3 {
                font-weight: 600;
                color: #6c8df7;
                margin-bottom: 1.5rem;
            }

        .form-control {
            background-color: #2c2c2e;
            border: 1px solid #3a3a3c;
            color: white;
            border-radius: 10px;
            padding: 10px;
        }

            .form-control::placeholder {
                color: #888;
            }

            .form-control:focus {
                border-color: #6c8df7;
                box-shadow: 0 0 0 0.2rem rgba(108, 141, 247, 0.25);
            }

        .btn-login {
            background-color: #6c8df7;
            border: none;
            color: white;
            padding: 10px;
            width: 100%;
            border-radius: 10px;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #5a76e0;
            }

        .alert {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="~/images/logo.png" alt="Logo de la tienda" />
        <h3>Iniciar Sesión</h3>
        <form action="@Url.Action("Login", "Home")" method="post">
            <div class="mb-3">
                <input type="text" name="NombreUsuario" class="form-control" placeholder="Nombre de Usuario" required />
            </div>
            <div class="mb-3">
                <input type="password" name="Contrasenia" class="form-control" placeholder="Contraseña" required />
            </div>
            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }
            <button type="submit" class="btn btn-login">Iniciar Sesión</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
